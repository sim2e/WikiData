                cos
                ⁡
                x
                −
                1
                
                  )
                  
                    3
                  
                
                +
                
                  O
                
                
                  (
                  
                    (
                    cos
                    ⁡
                    x
                    −
                    1
                    
                      )
                      
                        4
                      
                    
                  
                  )
                
              
            
            
              
              
                
                =
                
                  (
                  
                    −
                    
                      
                        
                          x
                          
                            2
                          
                        
                        2
                      
                    
                    +
                    
                      
                        
                          x
                          
                            4
                          
                        
                        24
                      
                    
                    −
                    
                      
                        
                          x
                          
                            6
                          
                        
                        720
                      
                    
                    +
                    
                      O
                    
                    
                      (
                      
                        x
                        
                          8
                        
                      
                      )
                    
                  
                  )
                
                −
                
                  
                    1
                    2
                  
                
                
                  
                    (
                    
                      −
                      
                        
                          
                            x
                            
                              2
                            
                          
                          2
                        
                      
                      +
                      
                        
                          
                            x
                            
                              4
                            
                          
                          24
                        
                      
                      +
                      
                        O
                      
                      
                        (
                        
                          x
                          
                            6
                          
                        
                        )
                      
                    
                    )
                  
                  
                    2
                  
                
                +
                
                  
                    1

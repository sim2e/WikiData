                          −
                          x
                        
                      
                      
                        
                          −
                          y
                        
                        
                          x
                        
                        
                          0
                        
                      
                    
                    ]
                  
                
                ↦
              
            
            
              
                
                
                  
                    1
                    
                      1
                      +
                      
                        x
                        
                          2
                        
                      
                      +
                      
                        y
                        
                          2
                        
                      
                      +
                      

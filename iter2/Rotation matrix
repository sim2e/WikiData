                  Q
                  
                    2
                  
                
              
              
                
                =
                
                  
                    [
                    
                      
                        
                          0
                        
                        
                          −
                          1
                        
                        
                          0
                        
                      
                      
                        
                          0
                        
                        
                          0
                        
                        
                          1
                        
                      
                      
                        
                          −
                          1
                        
                        
                          0
                        
                        
                          0
                        
                      
                    
                    ]
                  
                
              
              
                
                  Q
                  
                    2
                  
                
                
                  Q
                  
                    1
                  
                
              
              
                
                =
                
                  
                    [
                    
                      
                        
                          0
                        
                        
                          0
                        
                        
                          1
                        
                      
                      
                        

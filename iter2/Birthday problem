          )
        
        <
        
          ∏
          
            k
            =
            1
          
          
            n
            −
            1
          
        
        
          (
          
            e
            
              −
              
                
                  k
                  365
                
              
            
          
          )
        
        =
        
          e
          
            −
            
              
                
                  n
                  (
                  n
                  −
                  1
                  )
                

                          0
                        
                      
                      
                        
                          0
                        
                        
                          i
                          
                            σ
                            
                              3
                            
                          
                        
                      
                    
                    )
                  
                
                 
                ,
                 
              
              
                
                  γ
                  
                    2
                  
                
              
              
                

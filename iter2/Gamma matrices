                          0
                        
                      
                      
                        
                          0
                        
                        
                          −
                          i
                          
                            σ
                            
                              1
                            
                          
                        
                      
                    
                    )
                  
                
                 
                ,
                 
              
              
                
                  γ
                  
                    5
                  
                
              
              
                
                =
                
                  

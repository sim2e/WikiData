            1
            
              k
              !
            
          
        
        
          ∑
          
            σ
            ∈
            
              S
              
                k
              
            
          
        
        sgn
        ⁡
        (
        σ
        )
        
          τ
          
            p
          
        
        (
        
          x
          
            σ
            (
            1
            )
          
        
        ,
        …
        ,
        
          x
          
            σ
            (
            k

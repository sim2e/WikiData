            −
            1
          
        
        (
        
          a
          
            1
          
        
        +
        k
        d
        )
        =
        
          d
          
            n
          
        
        
          
            
              Γ
              
                (
                
                  
                    
                      
                        a
                        
                          1
                        
                      
                      d
                    
                  
                  +
                  n
                
                )
              
            
            
              Γ
              
                (
                
                  
                    
                      a
                      

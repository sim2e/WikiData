                  …
                
                
                  
                    x
                    
                      0
                    
                    
                      n
                    
                  
                
              
              
                
                  1
                
                
                  
                    x
                    
                      1
                    
                  
                
                
                  
                    x
                    
                      1
                    
                    
                      2
                    
                  
                
                
                  …
                
                
                  
                    x
                    
                      1
                    
                    
                      n
                    
                  
                
              
              
                

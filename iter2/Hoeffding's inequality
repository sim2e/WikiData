                )
                
                  E
                
                
                  [
                  
                    exp
                    ⁡
                    (
                    s
                    (
                    
                      S
                      
                        n
                      
                    
                    −
                    
                      E
                    
                    
                      [
                      
                        S
                        
                          n
                        
                      
                      ]
                    
                    )
                    )
                  
                  ]
                
              
            
            
              
              
                
                =
                exp
                ⁡
                (
                −
                s
                t
                )
                
                  ∏
                  
                    i
                    =
                    1
                  
                  
                    n
                  
                
                
                  E
                
                
                  [
                  
                    exp
                    ⁡
                    (
                    s
                    (
                    
                      X
                      
                        i
                      
                    
                    −
                    
                      E
                    
                    
                      [
                      
                        X
                        
                          i
                        
                      
                      ]
                    
                    )
                    )
                  

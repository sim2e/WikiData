                            2
                          
                        
                        
                          (
                          
                            
                              x
                              
                                3
                              
                            
                            +
                            
                              
                                S
                                
                                  x
                                  
                                    3
                                  
                                
                              
                            
                          
                          )
                        
                      
                      
                        =
                        
                          
                            1
                            2
                          
                        
                        
                          (
                          
                            354.059
                            +
                            
                              
                                125348
                                354.059
                              
                            
                          
                          )
                        
                      
                      
                        =
                        354.045
                      
                    
                    
                      
                        
                          x
                          
                            5
                          
                        
                      
                      
                        =
                        
                          
                            1
                            2
                          
                        
                        
                          (
                          
                            
                              x
                              
                                4
                              
                            
                            +
                            
                              
                                S
                                
                                  x
                                  
                                    4
                                  
                                
                              
                            
                          
                          )
                        
                      
                      
                        =
                        
                          
                            1
                            2
                          
                        
                        

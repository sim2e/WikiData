                =
                1.250
                ;
              
              
                
                  ε
                  
                    1
                  
                
              
              
                
                =
                0.250.
              
            
            
              
                S
              
              
                
                =
                10
                ;
              
              
                
                  x
                  
                    0
                  
                
              
              
                
                =
                2
                ;
              
              
                
                  x
                  
                    1
                  
                
              
              
                
                =
                3.500
                ;
              
              
                
                  ε
                  
                    1
                  
                
              
              
                
                <
                0.107.
              
            
            
              
                S
              
              
                
                =
                10
                ;
              
              
                
                  x
                  

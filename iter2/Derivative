              x
            
          
        
        tan
        ⁡
        (
        x
        )
        =
        
          sec
          
            2
          
        
        ⁡
        (
        x
        )
        =
        
          
            1
            
              
                cos
                
                  2
                
              
              ⁡
              (
              x
              )
            
          
        

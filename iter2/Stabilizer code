        ≡
        
          
            [
            
              
                
                  0
                
                
                  −
                  i
                
              
              
                
                  i
                
                
                  0
                
              
            
            ]
          
        
        ,
         
        Z
        ≡
        
          
            [
            
              
                
                  1
                
                
                  0
                
              
              
                
                  0
                
                

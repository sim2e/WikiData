  , we have:

  
    
      
        
          
            
              
                
                  
                    
                      F
                    
                  
                  
                    0
                  
                
              
              
                
                =
                
                  i
                  d
                
                ,
              
            
            
              
                
                  
                    
                      F
                    
                  
                  
                    1
                  
                
              
              
                
                =
                
                  
                    F
                  
                
                ,
              
            
            
              
                
                  
                    
                      F
                    
                  
                  
                    2
                  
                
              
              
                

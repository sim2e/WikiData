              8
              π
              G
            
            3
          
        
        ρ
      
    
    {\displaystyle \left({\frac {\dot {a}}{a}}\right)^{2}+{\frac {kc^{2}}{a^{2}}}-{\frac {\Lambda c^{2}}{3}}={\frac {8\pi G}{3}}\rho }
  

  
    
      
        2
        
          
            
              
                a
                ¨
              
            
            a
          
        
        +
        
          
            (
            
              
                
                  
                    a
                    ˙
                  
                
                a
              
            
            )
          
          
            2
          
        
        +
        
          
            
              k
              

                      2
                      k
                    
                  
                  
                  
                    d
                  
                  
                    B
                    
                      t
                    
                  
                
              
              
                
                  
                    X
                    
                      0
                    
                  
                  =
                  0
                
              
            
            
          
        
      
    
    {\displaystyle {\begin{cases}\mathrm {d} X_{t}={\sqrt {2k}}\;\mathrm {d} B_{t}\\X_{0}=0\end{cases}}}
  where 
  
    
      
